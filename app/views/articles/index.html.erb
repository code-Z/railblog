<div id="tag_cloud" style="float: left; background-color: #EEE; border-radius: 3px; width: 97%; margin-top:10px; margin-bottom:10px; padding:10px;" >
  <p>List of tags:</p>
	<% tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name) %>,
  <% end %>
  ...
</div>

<div id="search_box" style="background-color: #EEE; border-radius: 3px; width: 97%; margin-top:10px; margin-bottom:10px; padding:10px;" >
  <p>Search the article</p>
<%= search_form_for @search do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add more search conditions", f, :condition %></p>
  <div class="actions"><%= f.submit %></div>
<% end %>

</div>

<h1>List of Articles</h1>

<br /><br />

<ol class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item">
      <%= link_to article.title, article_path(article),
       class: 'article_title', id: "article_#{article.id}" %>
       <br />
       <p>Tags: <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
    </li>
  <% end %>
  <br /><br />
	<%= will_paginate @articles %>
  <br />
  <% if logged_in? %>
  <%= link_to "Create a New Article", new_article_path, class: "new_article" %>
  <% end %>
</ol>
